<?xml version="1.0" encoding="utf-8"?>
<paths>
    <!-- Allows access to files in your app's cache directory -->
    <cache-path
        name="cache"
        path="." />
    <!-- Optionally, allow access to external cache if needed -->
    <external-cache-path
        name="external_cache"
        path="." />
    <!-- ADICIONADO: Acesso a arquivos externos para compartilhamento -->
    <external-files-path
        name="external_files"
        path="." />
    <external-path
        name="external"
        path="." />
    <!-- Acesso a Downloads para arquivos baixados -->
    <external-path
        name="downloads"
        path="Download" />
    <!-- FIM ADICIONADO -->
</paths>
